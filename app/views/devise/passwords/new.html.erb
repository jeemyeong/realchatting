<center><h1 class="badge" style="background:##2c3e50; text-align:left;">
<%= devise_error_messages! %>
</h1></center>
<div class="container">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading">비밀번호찾기</h2>

    <div class="field">
      <%= f.label :email, for: :inputEmail, class: "sr-only" %><br />
      <%= f.email_field :email, id: :inputEmail, class: "form-control", placeholder: "이메일", autofocus: true %>
      <br>
    </div>
  
    <div class="actions">
      <%= f.submit "비밀번호 찾기", class: "btn btn-lg btn-success" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
