<div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"})  do  |f|%>
    <h2 class="form-signin-heading">로그인</h2>
      <div class="field">
        <%= f.label :email, for: :inputEmail, class: "sr-only" %><br />
        <%= f.email_field :email, id: :inputEmail, autofocus: true, class: "form-control", placeholder: "이메일주소"%>
      </div>
    
      <div class="field">
        <%= f.label :password, for: :inputPassword, class: "sr-only" %><br />
        <%= f.password_field :password, id: :inputPassword, class: "form-control", placeholder: "비밀번호", required: true, autocomplete: "off" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div class="actions">
        <%= f.submit "로그인", class: "btn btn-lg btn-success"%>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
</div>